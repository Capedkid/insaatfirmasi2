@model IEnumerable<InsaatFirmasi.Models.Slider>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Slider Yönetimi";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Slider Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <!-- Yeni Slider -->
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Slider</span>
                    <h3>Slider Ekle</h3>
                    <p>Ana sayfa slider'ında gösterilecek görsel ve metinleri ekleyin.</p>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Üst Başlık (küçük etiket)</label>
                            <input name="Kicker" class="form-control" placeholder="Örn: Drenaj Sistemleri, Rögar & Menhol" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Başlık (isteğe bağlı)</label>
                            <input name="Title" class="form-control" placeholder="Örn: Modern drenaj çözümleri" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Alt Başlık (isteğe bağlı)</label>
                            <textarea name="Subtitle" class="form-control" rows="2" placeholder="Kısa bir açıklama"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">1. Buton (opsiyonel)</label>
                            <select name="Button1Type" class="form-select">
                                <option value="">Buton yok</option>
                                <option value="products">Ürünleri Keşfet (Ürünler sayfası)</option>
                                <option value="contact">İletişim (İletişim sayfası)</option>
                                <option value="catalog">Online Katalog (Katalog sayfası)</option>
                                <option value="blog">Blog (Blog sayfası)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">2. Buton (opsiyonel)</label>
                            <select name="Button2Type" class="form-select">
                                <option value="">Buton yok</option>
                                <option value="products">Ürünleri Keşfet (Ürünler sayfası)</option>
                                <option value="contact">İletişim (İletişim sayfası)</option>
                                <option value="catalog">Online Katalog (Katalog sayfası)</option>
                                <option value="blog">Blog (Blog sayfası)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Görsel</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                            <small class="form-text text-muted">Önerilen boyut: 1920x800 piksel (hero slider tam ekran). Minimum: 1200x600 piksel. JPG veya PNG formatında bir görsel yükleyin. Maksimum dosya boyutu: 10MB.</small>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Slider Ekle
                        </button>
                    </form>
                </div>
            </div>

            <!-- Slider Listesi -->
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Sliderlar</span>
                    <h3>Slider Listesi</h3>

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-dark table-striped table-hover align-middle mt-3">
                            <thead>
                                <tr>
                                    <th>Görsel</th>
                                    <th>Başlık</th>
                                    <th>Eklenme</th>
                                    <th style="width: 130px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td style="width: 90px;">
                                            @if (!string.IsNullOrEmpty(slider.ImagePath))
                                            {
                                                <img src="~/@slider.ImagePath" alt="@slider.Title" class="img-fluid rounded" style="max-height: 60px;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center text-muted" style="height:60px;">
                                                    <i class="fas fa-image fa-lg"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>@slider.Title</td>
                                        <td>@slider.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td class="text-end">
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@slider.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Bu sliderı silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç slider eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


