@model InsaatFirmasi.ViewModels.AdminAboutViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Hakkımızda Yönetimi";
}

<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Hakkımızda Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Hakkımızda Metni</span>
                    <h3>Hakkımızda İçeriğini Güncelle</h3>
                    <p class="home-section-text mb-3">
                        Anasayfanın "Hakkımızda" bölümünde gösterilecek başlık, alt başlık ve maddeleri buradan güncelleyebilirsiniz.
                    </p>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="UpdateContent" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input name="Title" class="form-control" value="@Model.Content.Title" placeholder="Örn: Plastik inşaat çözümlerinde güvenilir üretici" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Alt Başlık / Açıklama</label>
                            <textarea name="Subtitle" class="form-control" rows="3" placeholder="Kısa açıklama">@Model.Content.Subtitle</textarea>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">1. Madde Başlığı</label>
                                <input name="Item1Title" class="form-control" value="@Model.Content.Item1Title" placeholder="Örn: 25+ yıllık tecrübe" />
                                <label class="form-label mt-2">1. Madde Yazısı</label>
                                <textarea name="Item1Text" class="form-control" rows="2" placeholder="Kısa açıklama">@Model.Content.Item1Text</textarea>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">2. Madde Başlığı</label>
                                <input name="Item2Title" class="form-control" value="@Model.Content.Item2Title" placeholder="Örn: Güçlü üretim altyapısı" />
                                <label class="form-label mt-2">2. Madde Yazısı</label>
                                <textarea name="Item2Text" class="form-control" rows="2" placeholder="Kısa açıklama">@Model.Content.Item2Text</textarea>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">3. Madde Başlığı</label>
                                <input name="Item3Title" class="form-control" value="@Model.Content.Item3Title" placeholder="Örn: Projeye özel çözümler" />
                                <label class="form-label mt-2">3. Madde Yazısı</label>
                                <textarea name="Item3Text" class="form-control" rows="2" placeholder="Kısa açıklama">@Model.Content.Item3Text</textarea>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4 mt-3">
                            <i class="fas fa-save me-2"></i>Metni Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Yeni Görsel Ekle -->
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Görsel</span>
                    <h3>Görsel Ekle</h3>
                    <p>Anasayfadaki hakkımızda bölümünde gösterilecek görselleri ekleyin.</p>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Görsel</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                            <small class="form-text text-muted">Önerilen boyut: 1200x800 piksel (16:9 oran). JPG veya PNG formatında bir görsel yükleyin.</small>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Görsel Ekle
                        </button>
                    </form>
                </div>
            </div>

            <!-- Görsel Listesi -->
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Görseller</span>
                    <h3>Görsel Listesi</h3>

                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="row g-3 mt-3">
                            @foreach (var image in Model.Images)
                            {
                                <div class="col-md-6">
                                    <div class="card border-0 bg-dark">
                                        <img src="~/@image.ImagePath" alt="Hakkımızda görseli" class="card-img-top" style="height: 200px; object-fit: cover;" />
                                        <div class="card-body">
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@image.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Bu görseli silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç görsel eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

