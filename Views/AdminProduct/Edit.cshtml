@using InsaatFirmasi.Models
@model Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ürün Düzenle";
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Ürün Düzenle</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Ürün Bilgileri</span>
                    <h3>Ürün Bilgilerini Güncelle</h3>
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input name="Name" class="form-control" value="@Model.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea name="Description" class="form-control" rows="3">@Model.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <select name="CategoryId" class="form-select">
                                <option value="">Kategori seçin</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.Id"
                                            selected="@(cat.Id == Model.CategoryId ? "selected" : null)">
                                        @cat.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ürün Görseli (isteğe bağlı yeni görsel)</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Yeni bir görsel seçerseniz mevcut ürün görselinin yerini alır.</small>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-outline-light ms-2">Geri Dön</a>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Görsel</span>
                    <h3>Ürün Görsel Önizlemesi</h3>
                    <div class="mt-3">
                        @if (!string.IsNullOrEmpty(Model.MainImagePath))
                        {
                            <img src="~/@Model.MainImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:260px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height:260px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


