@using InsaatFirmasi.Models
@model IEnumerable<Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ürün Yönetimi";

    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Ürün Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Ürün</span>
                    <h3>Ürün Ekle</h3>
                    <p>Ürün adını, açıklamasını, kategorisini ve görselini girerek yeni bir ürün oluşturun.</p>
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input name="Name" class="form-control" placeholder="Örn: Lineer Drenaj Kanalı" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ürün Adı (EN) - opsiyonel</label>
                            <input name="NameEn" class="form-control" placeholder="E.g. Linear Drainage Channel" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea name="Description" class="form-control" rows="3" placeholder="Ürün açıklaması (detay sayfasında görünecek metin)"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Açıklama (EN) - opsiyonel</label>
                            <textarea name="DescriptionEn" class="form-control" rows="3" placeholder="Product description (shown on detail page in English)"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <select name="CategoryId" class="form-select">
                                <option value="">Kategori seçin</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsInStock" name="IsInStock" value="true" checked />
                            <label class="form-check-label" for="IsInStock">Stokta var</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ürün Görseli</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Önerilen boyut: 1200x800 piksel (3:2 oran). Minimum: 800x600 piksel. JPG veya PNG formatında bir görsel yükleyin. Maksimum dosya boyutu: 5MB.</small>
                        </div>
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Ürün Ekle
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Ürünler</span>
                    <h3>Ürün Listesi</h3>
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-dark table-striped table-hover align-middle mt-3">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">Görsel</th>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Stok</th>
                                    <th style="width: 260px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(product.MainImagePath))
                                            {
                                                <img src="~/@product.MainImagePath" alt="@product.Name" class="img-fluid rounded" style="max-height: 60px;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center text-muted" style="height:60px;">
                                                    <i class="fas fa-box-open fa-lg"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>@product.Name</td>
                                        <td>@(product.Category != null ? product.Category.Name : "-")</td>
                                        <td>
                                            @if (product.IsInStock)
                                            {
                                                <span class="badge bg-success">Stokta var</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Stokta yok</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-light me-1">
                                                <i class="fas fa-pen me-1"></i>Düzenle
                                            </a>
                                            <form asp-action="ToggleStock" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                @if (product.IsInStock)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning me-1">
                                                        <i class="fas fa-box-open me-1"></i>Stoktan Kaldır
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success me-1">
                                                        <i class="fas fa-box-open me-1"></i>Stokta Var Yap
                                                    </button>
                                                }
                                            </form>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Ürün listesi sayfalama" class="mt-3">
                                <ul class="pagination justify-content-end mb-0">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-action="Index"
                                               asp-route-page="@(ViewBag.CurrentPage - 1)">
                                                Önceki
                                            </a>
                                        </li>
                                    }

                                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               asp-action="Index"
                                               asp-route-page="@i">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-action="Index"
                                               asp-route-page="@(ViewBag.CurrentPage + 1)">
                                                Sonraki
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç ürün eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


