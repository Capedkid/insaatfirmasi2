@model InsaatFirmasi.Models.Catalog
@{
    ViewData["Title"] = Model.Title + " - Online Görüntüle";
    ViewData["Description"] = Model.Title + " katalogunu online olarak görüntüleyin.";
    ViewData["Keywords"] = $"{Model.Title}, online katalog, PDF görüntüleme";
}

<!-- Breadcrumb -->
<section class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Catalog")">Online Katalog</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- PDF Viewer Header -->
<section class="py-3 bg-white border-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h4 class="fw-bold text-dark mb-1">@Model.Title</h4>
                <p class="text-muted mb-0">
                    <i class="fas fa-file-pdf text-danger me-1"></i>
                    @Model.FileExtension.ToUpper() • @Model.FileSize • @Model.DownloadCount İndirme
                </p>
            </div>
            <div class="col-lg-4 text-end">
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Download", "Catalog", new { id = Model.Id })" 
                       class="btn btn-danger">
                        <i class="fas fa-download me-2"></i>İndir
                    </a>
                    <a href="@Url.Action("Index", "Catalog")" 
                       class="btn btn-outline-danger">
                        <i class="fas fa-arrow-left me-2"></i>Kataloglara Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- PDF Viewer -->
<section class="py-0" style="min-height: 80vh;">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- PDF Viewer -->
            <div class="col-12">
                <div class="pdf-viewer-container">
                    @if (Model.FileExtension.ToLower() == "pdf")
                    {
                        <iframe src="~/uploads/catalogs/@Model.FileUrl" 
                                class="w-100" 
                                style="height: 80vh; border: none;"
                                title="@Model.Title">
                            <p>Tarayıcınız PDF görüntülemeyi desteklemiyor. 
                               <a href="@Url.Action("Download", "Catalog", new { id = Model.Id })">Katalogu indirmek için tıklayın</a>
                            </p>
                        </iframe>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light" style="height: 80vh;">
                            <div class="text-center">
                                <i class="fas fa-file fa-5x text-muted mb-3"></i>
                                <h4 class="text-muted">Bu dosya türü online görüntülenemez</h4>
                                <p class="text-muted">Dosyayı görüntülemek için indirmeniz gerekiyor.</p>
                                <a href="@Url.Action("Download", "Catalog", new { id = Model.Id })" 
                                   class="btn btn-danger">
                                    <i class="fas fa-download me-2"></i>Dosyayı İndir
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- PDF Viewer Controls -->
<section class="py-3 bg-white border-top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">Katalog Bilgileri:</span>
                    <div class="d-flex gap-3">
                        <span class="badge bg-secondary">@Model.FileExtension.ToUpper()</span>
                        <span class="badge bg-secondary">@Model.FileSize</span>
                        <span class="badge bg-danger">@Model.DownloadCount İndirme</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-end">
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-outline-secondary btn-sm" onclick="printCatalog()">
                        <i class="fas fa-print me-1"></i>Yazdır
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="shareCatalog()">
                        <i class="fas fa-share me-1"></i>Paylaş
                    </button>
                    <a href="@Url.Action("Download", "Catalog", new { id = Model.Id })" 
                       class="btn btn-danger btn-sm">
                        <i class="fas fa-download me-1"></i>İndir
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Katalog Açıklaması -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center">
                    <h5 class="fw-bold text-dark mb-2">@Model.Title</h5>
                    <p class="text-muted mb-0">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- İlgili Kataloglar -->
@if (ViewBag.RelatedCatalogs != null)
{
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-dark">İlgili Kataloglar</h3>
                <p class="text-muted">Diğer kataloglarımızı da inceleyin</p>
            </div>
            
            <div class="row g-3">
                @foreach (var catalog in ViewBag.RelatedCatalogs as IEnumerable<InsaatFirmasi.Models.Catalog>)
                {
                    <div class="col-lg-2 col-md-4 col-6">
                        <div class="card border-0 shadow-sm">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(catalog.CoverImageUrl))
                                {
                                    <img src="~/uploads/catalogs/@catalog.CoverImageUrl" 
                                         class="card-img-top" 
                                         alt="@catalog.Title"
                                         style="height: 120px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 120px;">
                                        <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                    </div>
                                }
                            </div>
                            
                            <div class="card-body p-2 text-center">
                                <h6 class="card-title fw-bold small mb-1">@catalog.Title</h6>
                                <div class="d-flex justify-content-center gap-1">
                                    <a href="@Url.Action("View", "Catalog", new { id = catalog.Id })" 
                                       class="btn btn-danger btn-sm" style="font-size: 0.7rem;">
                                        Görüntüle
                                    </a>
                                    <a href="@Url.Action("Download", "Catalog", new { id = catalog.Id })" 
                                       class="btn btn-outline-danger btn-sm" style="font-size: 0.7rem;">
                                        İndir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@section Scripts {
    <script>
        function printCatalog() {
            if (window.print) {
                window.print();
            } else {
                alert('Yazdırma özelliği desteklenmiyor.');
            }
        }
        
        function shareCatalog() {
            if (navigator.share) {
                navigator.share({
                    title: '@Model.Title',
                    text: '@Model.Description',
                    url: window.location.href
                });
            } else {
                // Fallback: URL'yi kopyala
                navigator.clipboard.writeText(window.location.href);
                alert('Katalog linki kopyalandı!');
            }
        }
        
        // PDF yüklendiğinde indirme sayısını artır
        document.addEventListener('DOMContentLoaded', function() {
            // PDF iframe yüklendiğinde indirme sayısını artır
            const iframe = document.querySelector('iframe');
            if (iframe) {
                iframe.addEventListener('load', function() {
                    // AJAX ile indirme sayısını artır
                    fetch('@Url.Action("IncrementViewCount", "Catalog", new { id = Model.Id })', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });
                });
            }
        });
    </script>
}

<style>
    .pdf-viewer-container {
        position: relative;
        width: 100%;
        height: 80vh;
        background: #f8f9fa;
    }
    
    .pdf-viewer-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }
    
    @@media print {
        .pdf-viewer-container {
            height: 100vh;
        }
        
        .container-fluid {
            padding: 0 !important;
        }
    }
</style>
