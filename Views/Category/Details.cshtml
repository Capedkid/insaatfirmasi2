@model InsaatFirmasi.Models.Category
@{
    ViewData["Title"] = Model.Name;
    ViewData["Description"] = Model.Description?.Length > 160 ? Model.Description.Substring(0, 160) + "..." : Model.Description;
    ViewData["Keywords"] = $"{Model.Name}, {Model.Description}, inşaat malzemeleri, ürün kategorisi";
}

<!-- Breadcrumb -->
<section class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Category")">Kategoriler</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Kategori Header -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="mb-3">
                    <span class="badge bg-danger fs-6">@Model.Products?.Count() Ürün</span>
                </div>
                <h1 class="display-4 fw-bold text-dark mb-3">@Model.Name</h1>
                <p class="lead text-muted mb-4">@Model.Description</p>
                
                <div class="row g-3 mb-4">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar text-danger me-3 fa-2x"></i>
                            <div>
                                <h6 class="fw-bold mb-0">@Model.CreatedDate.ToString("dd.MM.yyyy")</h6>
                                <small class="text-muted">Kategori Tarihi</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-box text-danger me-3 fa-2x"></i>
                            <div>
                                <h6 class="fw-bold mb-0">@Model.Products?.Count()</h6>
                                <small class="text-muted">Toplam Ürün</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Product", new { categoryId = Model.Id })" 
                       class="btn btn-danger btn-lg">
                        <i class="fas fa-list me-2"></i>Tüm Ürünleri Görüntüle
                    </a>
                    <a href="@Url.Action("Index", "Contact")" 
                       class="btn btn-outline-danger btn-lg">
                        <i class="fas fa-phone me-2"></i>İletişime Geçin
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/uploads/categories/@Model.ImageUrl" 
                         class="img-fluid rounded shadow-lg" 
                         alt="@Model.Name"
                         style="height: 400px; width: 100%; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-lg" 
                         style="height: 400px;">
                        <i class="fas fa-th-large fa-5x text-muted"></i>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Kategori Ürünleri -->
@if (Model.Products != null && Model.Products.Any())
{
    <section class="bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-dark">@Model.Name Ürünleri</h2>
                <p class="text-muted">Bu kategorideki tüm ürünlerimiz</p>
            </div>
            
            <div class="row g-4">
                @foreach (var product in Model.Products.Take(8))
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm product-card">
                            <div class="position-relative">
                                @if (product.ProductImages != null && product.ProductImages.Any())
                                {
                                    <img src="~/uploads/products/@product.ProductImages.First().ImageUrl" 
                                         class="card-img-top" 
                                         alt="@product.Name"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="fas fa-image fa-2x text-muted"></i>
                                    </div>
                                }
                                
                                @if (product.IsFeatured)
                                {
                                    <span class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 small">
                                        <i class="fas fa-star me-1"></i>Öne Çıkan
                                    </span>
                                }
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title fw-bold text-dark mb-2">@product.Name</h6>
                                
                                <p class="card-text text-muted small flex-grow-1">
                                    @(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                </p>
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            @if (product.Price.HasValue)
                                            {
                                                <span class="h6 text-danger fw-bold">@product.Price.Value.ToString("C")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Fiyat için iletişime geçin</span>
                                            }
                                        </div>
                                        <div class="text-muted small">
                                            <i class="fas fa-eye me-1"></i>@product.ViewCount
                                        </div>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" 
                                           class="btn btn-danger btn-sm">
                                            <i class="fas fa-eye me-1"></i>Detayları Gör
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            @if (Model.Products.Count() > 8)
            {
                <div class="text-center mt-5">
                    <a href="@Url.Action("Index", "Product", new { categoryId = Model.Id })" 
                       class="btn btn-danger btn-lg">
                        <i class="fas fa-list me-2"></i>Tüm @Model.Products.Count() Ürünü Görüntüle
                    </a>
                </div>
            }
        </div>
    </section>
}

<!-- Kategori Özellikleri -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-dark">@Model.Name Özellikleri</h2>
            <p class="text-muted">Bu kategorideki ürünlerin öne çıkan özellikleri</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="text-center p-4">
                    <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-gem fa-2x"></i>
                    </div>
                    <h5 class="fw-bold text-dark mb-3">Yüksek Kalite</h5>
                    <p class="text-muted">Tüm ürünlerimiz yüksek kalite standartlarında üretilmektedir.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center p-4">
                    <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-shield-alt fa-2x"></i>
                    </div>
                    <h5 class="fw-bold text-dark mb-3">Garanti</h5>
                    <p class="text-muted">2 yıl garanti kapsamında güvenli alışveriş.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center p-4">
                    <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                    <h5 class="fw-bold text-dark mb-3">Hızlı Teslimat</h5>
                    <p class="text-muted">3-7 iş günü içinde teslimat yapılmaktadır.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center p-4">
                    <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-headset fa-2x"></i>
                    </div>
                    <h5 class="fw-bold text-dark mb-3">Teknik Destek</h5>
                    <p class="text-muted">Uzman ekibimizden 7/24 teknik destek alabilirsiniz.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- İlgili Kategoriler -->
@if (ViewBag.RelatedCategories != null)
{
    <section class="bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-dark">İlgili Kategoriler</h2>
                <p class="text-muted">Diğer ürün kategorilerimizi de inceleyin</p>
            </div>
            
            <div class="row g-4">
                @foreach (var category in ViewBag.RelatedCategories as IEnumerable<InsaatFirmasi.Models.Category>)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                {
                                    <img src="~/uploads/categories/@category.ImageUrl" 
                                         class="card-img-top" 
                                         alt="@category.Name"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="fas fa-th-large fa-3x text-muted"></i>
                                    </div>
                                }
                                
                                <span class="position-absolute top-0 end-0 p-2">
                                    <span class="badge bg-danger">@category.Products?.Count() Ürün</span>
                                </span>
                            </div>
                            
                            <div class="card-body text-center">
                                <h6 class="card-title fw-bold">@category.Name</h6>
                                <p class="card-text text-muted small">
                                    @(category.Description?.Length > 80 ? category.Description.Substring(0, 80) + "..." : category.Description)
                                </p>
                                <a href="@Url.Action("Details", "Category", new { id = category.Id })" 
                                   class="btn btn-danger btn-sm">
                                    İncele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- İletişim CTA -->
<section class="py-5 bg-danger text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="display-6 fw-bold mb-3">@Model.Name Hakkında Sorularınız mı Var?</h2>
                <p class="lead mb-0">
                    Bu kategori hakkında detaylı bilgi almak, fiyat teklifi istemek veya özel talepleriniz için bizimle iletişime geçin.
                </p>
            </div>
            <div class="col-lg-4 text-end">
                <a href="@Url.Action("Index", "Contact")" class="btn btn-light btn-lg px-4">
                    <i class="fas fa-phone me-2"></i>İletişime Geçin
                </a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Ürün kartlarına hover efekti
        document.addEventListener('DOMContentLoaded', function() {
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'transform 0.3s ease';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}
