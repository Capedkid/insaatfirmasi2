@model IEnumerable<InsaatFirmasi.Models.Category>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kategori Yönetimi";
}

<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Kategori Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Kategori</span>
                    <h3>Kategori Ekle</h3>
                    <p>Kategori adını, açıklamasını ve görselini ekleyerek yeni bir kategori oluşturun.</p>
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Kategori Adı</label>
                            <input name="Name" class="form-control" placeholder="Örn: Drenaj Kanalları" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea name="Description" class="form-control" rows="3" placeholder="Kısa bir açıklama"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Kategori Görseli</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Önerilen boyut: 1200x800 piksel (3:2 oran). Minimum: 800x600 piksel. JPG veya PNG formatında bir görsel yükleyin. Maksimum dosya boyutu: 5MB.</small>
                        </div>
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Kategori Ekle
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Kategoriler</span>
                    <h3>Kategori Listesi</h3>
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-dark table-striped table-hover align-middle mt-3">
                            <thead>
                                <tr>
                                    <th>Görsel</th>
                                    <th>Adı</th>
                                    <th>Açıklama</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td style="width: 80px;">
                                            @if (!string.IsNullOrEmpty(category.ImagePath))
                                            {
                                                <img src="~/@category.ImagePath" alt="@category.Name" class="img-fluid rounded" style="max-height: 60px;" />
                                            }
                                            else if (!string.IsNullOrEmpty(category.ImageUrl))
                                            {
                                                <img src="@category.ImageUrl" alt="@category.Name" class="img-fluid rounded" style="max-height: 60px;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center text-muted" style="height:60px;">
                                                    <i class="fas fa-image fa-lg"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>@category.Name</td>
                                        <td>@category.Description</td>
                                        <td class="text-end">
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@category.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç kategori eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

