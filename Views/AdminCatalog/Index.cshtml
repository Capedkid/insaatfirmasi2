@model IEnumerable<InsaatFirmasi.Models.Catalog>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Katalog Yönetimi";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Katalog Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <!-- Yeni Katalog -->
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Katalog</span>
                    <h3>Katalog Ekle</h3>
                    <p>PDF katalog dosyasını ve isteğe bağlı kapak görselini yükleyerek yeni bir katalog oluşturun.</p>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Katalog Adı</label>
                            <input name="Name" class="form-control" placeholder="Örn: Drenaj Sistemleri 2025" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Başlık (isteğe bağlı)</label>
                            <input name="Title" class="form-control" placeholder="Örn: Drenaj Kanalları ve Aksesuarlar" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea name="Description" class="form-control" rows="3" placeholder="Katalog içeriği hakkında kısa bir açıklama"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Katalog Dosyası (PDF vb.)</label>
                            <input type="file" name="file" class="form-control" accept=".pdf,.doc,.docx,.xls,.xlsx" required />
                            <small class="form-text text-muted">Tercihen PDF formatında bir katalog dosyası yükleyin.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kapak Görseli (isteğe bağlı)</label>
                            <input type="file" name="coverImage" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Önerilen boyut: 1200x800 piksel (3:2 oran). Minimum: 800x600 piksel. JPG veya PNG formatında bir görsel yükleyin. Maksimum dosya boyutu: 5MB. Katalog listesinde görünecek kapak görseli.</small>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Katalog Ekle
                        </button>
                    </form>
                </div>
            </div>

            <!-- Katalog Listesi -->
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Kataloglar</span>
                    <h3>Katalog Listesi</h3>

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-dark table-striped table-hover align-middle mt-3">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Dosya</th>
                                    <th>İndirme</th>
                                    <th style="width: 130px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var catalog in Model)
                                {
                                    <tr>
                                        <td>@(string.IsNullOrEmpty(catalog.Title) ? catalog.Name : catalog.Title)</td>
                                        <td>
                                            <span class="badge bg-secondary me-1">@catalog.FileExtension?.ToUpper()</span>
                                            <small class="text-muted">@catalog.FileSize</small>
                                        </td>
                                        <td>@catalog.DownloadCount</td>
                                        <td class="text-end">
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@catalog.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Bu kataloğu silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç katalog eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


