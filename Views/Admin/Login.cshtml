@{
    Layout = null;
    var returnUrl = ViewData["ReturnUrl"] as string ?? string.Empty;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Girişi - İnşaat Firması</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="site-body">
    <main class="site-main d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="home-card">
                        <h3 class="mb-3 text-center">Admin Girişi</h3>
                        <p class="home-section-text mb-4 text-center">
                            Yönetim paneline giriş yapmak için kullanıcı adı ve şifrenizi girin.
                        </p>

                        <form asp-action="Login" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="returnUrl" value="@returnUrl" />

                            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                            <div class="mb-3">
                                <label class="form-label">Kullanıcı Adı</label>
                                <input name="username" class="form-control" autocomplete="username" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Şifre</label>
                                <input name="password" type="password" class="form-control" autocomplete="current-password" required />
                            </div>

                            <button type="submit" class="btn btn-danger w-100 mt-2">
                                <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



