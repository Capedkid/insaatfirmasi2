@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Paneli";
    ViewData["Description"] = "Site yönetimi için admin paneli.";
    ViewData["Keywords"] = "admin, yönetim, ürün yönetimi, blog yönetimi";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Admin Paneli</h1>
    </div>
</section>

<!-- ADMİN DASHBOARD KARTLARI -->
<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Ürün Yönetimi</h3>
                    <p>Ürün ekleme, düzenleme ve silme işlemlerini buradan yöneteceksiniz.</p>
                    <a asp-controller="AdminProduct" asp-action="Index" class="home-card-link">
                        Ürün yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Kategori Yönetimi</h3>
                    <p>Ürün kategorilerini oluşturup yapılandırabileceğiniz alan.</p>
                    <a asp-controller="AdminCategory" asp-action="Index" class="home-card-link">
                        Kategori yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Blog Yönetimi</h3>
                    <p>Blog yazıları ekleyip düzenleyerek içeriklerinizi güncel tutun.</p>
                    <a asp-controller="AdminBlog" asp-action="Index" class="home-card-link">
                        Blog yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Katalog Yönetimi</h3>
                    <p>PDF katalogları ve dokümanları sisteme yükleyip yönetin.</p>
                    <a asp-controller="AdminCatalog" asp-action="Index" class="home-card-link">
                        Katalog yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Slider Yönetimi</h3>
                    <p>Ana sayfa slider görsellerini ve metinlerini yönetin.</p>
                    <a asp-controller="AdminSlider" asp-action="Index" class="home-card-link">
                        Slider yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Hakkımızda Yönetimi</h3>
                    <p>Anasayfadaki hakkımızda bölümünde gösterilecek görselleri yönetin.</p>
                    <a asp-controller="AdminAbout" asp-action="Index" class="home-card-link">
                        Hakkımızda yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>İletişim Yönetimi</h3>
                    <p>Telefon, e-posta, adres ve harita konum bilgilerini güncelleyin.</p>
                    <a asp-controller="AdminContact" asp-action="Index" class="home-card-link">
                        İletişim yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Alt Sayfa Yönetimi</h3>
                    <p>Footer'ın sol alanındaki metinler ve alt sayfa adı (© yıl bilgisinden sonra görünen yazı) yönetimini yapın.</p>
                    <a asp-controller="AdminLogo" asp-action="Index" class="home-card-link">
                        Alt sayfa yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Referans Yönetimi</h3>
                    <p>Anasayfada yer alacak referans firma logolarını yönetin.</p>
                    <a asp-controller="AdminReference" asp-action="Index" class="home-card-link">
                        Referans yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Kurumsal Sayfa Yönetimi</h3>
                    <p>Kurumsal sayfasındaki tarihçe, misyon, vizyon ve değerler metinlerini yönetin.</p>
                    <a asp-controller="AdminCorporate" asp-action="Index" class="home-card-link">
                        Kurumsal yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
