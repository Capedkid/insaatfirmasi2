@using InsaatFirmasi.Models
@model IEnumerable<BlogPost>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog Yönetimi";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Blog Yönetimi</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <!-- Yeni Blog Yazısı -->
            <div class="col-lg-4">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Yeni Blog Yazısı</span>
                    <h3>Yazı Ekle</h3>
                    <p>Başlık, özet, kapak görseli ve içerik girerek yeni bir blog yazısı oluşturun.</p>
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input name="Title" class="form-control" placeholder="Örn: Drenaj sistemlerinde dikkat edilmesi gerekenler" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Özet</label>
                            <textarea name="Summary" class="form-control" rows="2" placeholder="Kısa bir özet yazın"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategori (isteğe bağlı)</label>
                            <input name="Category" class="form-control" placeholder="Örn: Drenaj, Rögar, Islak Zemin" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Etiketler (virgülle ayırın)</label>
                            <input name="Tags" class="form-control" placeholder="Örn: drenaj, altyapı, plastik çözümler" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kapak Görseli</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Önerilen boyut: 1200x630 piksel (Facebook Open Graph standart). Minimum: 800x600 piksel. JPG veya PNG formatında bir görsel yükleyin. Maksimum dosya boyutu: 5MB.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">İçerik</label>
                            <textarea name="Content" class="form-control" rows="6" placeholder="Blog yazınızın tamamını buraya yazın" required></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsFeatured" name="IsFeatured" value="true" />
                            <label class="form-check-label" for="IsFeatured">Öne çıkan yazı olarak işaretle</label>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsPublished" name="IsPublished" value="true" />
                            <label class="form-check-label" for="IsPublished">Hemen yayınla</label>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Yazı Ekle
                        </button>
                    </form>
                </div>
            </div>

            <!-- Blog Yazıları Listesi -->
            <div class="col-lg-8">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Mevcut Yazılar</span>
                    <h3>Blog Yazıları</h3>

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-dark table-striped table-hover align-middle mt-3">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>Durum</th>
                                    <th>Tarih</th>
                                    <th style="width: 170px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@post.Title</td>
                                        <td>@(string.IsNullOrWhiteSpace(post.Category) ? "-" : post.Category)</td>
                                        <td>
                                            @if (post.IsPublished && post.PublishedDate.HasValue)
                                            {
                                                <span class="badge bg-success">Yayında</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Taslak</span>
                                            }
                                            @if (post.IsFeatured)
                                            {
                                                <span class="badge bg-warning text-dark ms-1">Öne Çıkan</span>
                                            }
                                        </td>
                                        <td>
                                            @(post.PublishedDate?.ToString("dd.MM.yyyy") ?? post.CreatedDate.ToString("dd.MM.yyyy"))
                                        </td>
                                        <td class="text-end">
                                            <form asp-action="TogglePublish" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@post.Id" />
                                                @if (post.IsPublished)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-eye-slash me-1"></i>Yayından Kaldır
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-eye me-1"></i>Yayınla
                                                    </button>
                                                }
                                            </form>

                                            <form asp-action="Delete" method="post" class="d-inline ms-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@post.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash-alt me-1"></i>Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mt-3 mb-0 text-muted">Henüz hiç blog yazısı eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


