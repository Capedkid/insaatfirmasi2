@using InsaatFirmasi.Models
@model BlogPost
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog Yazısı Düzenle";
}

<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Blog Yazısı Düzenle</h1>
    </div>
</section>

<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Blog Metni</span>
                    <h3>Blog İçeriğini Güncelle</h3>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input name="Title" class="form-control" value="@Model.Title" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Başlık (EN) - opsiyonel</label>
                            <input name="TitleEn" class="form-control" value="@Model.TitleEn" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Özet</label>
                            <textarea name="Summary" class="form-control" rows="2">@Model.Summary</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Özet (EN) - opsiyonel</label>
                            <textarea name="SummaryEn" class="form-control" rows="2">@Model.SummaryEn</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategori (isteğe bağlı)</label>
                            <input name="Category" class="form-control" value="@Model.Category" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Etiketler (virgülle ayırın)</label>
                            <input name="Tags" class="form-control" value="@Model.Tags" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">İçerik</label>
                            <textarea name="Content" class="form-control" rows="6" required>@Model.Content</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">İçerik (EN) - opsiyonel</label>
                            <textarea name="ContentEn" class="form-control" rows="6">@Model.ContentEn</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kapak Görseli (isteğe bağlı yeni görsel)</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Yeni bir görsel seçerseniz mevcut kapak görselinin yerini alır.</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsFeatured" name="IsFeatured" value="true" @(Model.IsFeatured ? "checked" : null) />
                            <label class="form-check-label" for="IsFeatured">Öne çıkan yazı olarak işaretle</label>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsPublished" name="IsPublished" value="true" @(Model.IsPublished ? "checked" : null) />
                            <label class="form-check-label" for="IsPublished">Yayında olsun</label>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-outline-light ms-2">Geri Dön</a>
                    </form>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="home-card admin-card">
                    <span class="home-section-kicker d-block mb-1">Kapak Görseli</span>
                    <h3>Mevcut Kapak Görseli</h3>
                    <div class="mt-3">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded" style="max-height:260px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height:260px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                    </div>
                    <p class="small text-muted mt-3 mb-0">
                        Yayın durumu: @(Model.IsPublished ? "Yayında" : "Taslak") -
                        @(Model.PublishedDate?.ToString("dd.MM.yyyy HH:mm") ?? Model.CreatedDate.ToString("dd.MM.yyyy HH:mm"))
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


